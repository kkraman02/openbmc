+		case 4:
+			memcpy((void *)addr_dest,
+					 (void *)&fru_data.prod.serial_number[0],
+					  fru_data.prod.serial_number_type_len
+					   & FRU_TYPELEN_LEN_MASK);
+			break;
+		case 5:
+			memcpy((void *)addr_dest,
+					 (void *)&fru_data.prod.assert_tag[0],
